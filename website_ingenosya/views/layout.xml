<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <data>
  <!-- Customize meta -->
  <template id="website_ingenosya.meta" inherit_id="web.layout">
    <xpath expr="//meta[@http-equiv='X-UA-Compatible']" position="replace">
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    </xpath>

    <xpath expr="//meta[@name='viewport']" position="replace">
      <meta name="viewport" content="width=device-width, initial-scale=1" />
    </xpath>
  </template>

  

  <!-- end of meta -->

  <!-- Add Json ld -->
<template id="json_ld" inherit_id="website.layout">
