                <script type="application/ld+json">
                    [
                    {
                        "@context": "https://schema.org",
                        "@type": "LocalBusiness",
                        "name": "Ingenosya",
                        "image": "https://www.ingenosya.com/logo.png",
                        "@id": "https://www.ingenosya.com",
                        "url": "https://www.ingenosya.com",
                        "telephone": "+261 20 226 93 62",
                        "priceRange": "",
                        "address": {
                            "@type": "PostalAddress",
                            "addressLocality": "Antananarivo",
                            "postalCode": "101",
                            "addressCountry": "MG"
                        },
                        "geo": {
                            "@type": "GeoCoordinates",
                            "latitude": -18.941218,
                            "longitude": 47.502115
                        },
                        "openingHoursSpecification": {
                            "@type": "OpeningHoursSpecification",
                            "dayOfWeek": [
                                "Monday",
                                "Tuesday",
                                "Wednesday",
                                "Thursday",
                                "Friday"
                            ],
                            "opens": "08:00",
                            "closes": "18:00"
                        },
                        "sameAs": [
                            "https://www.facebook.com/Ingenosya",
                            "https://twitter.com/Ingenosya_SSII",
                            "https://www.linkedin.com/company/ingenosya"
                        ]
                    },
                    {
                        "@context": "https://schema.org",
                        "@type": "Organization",
