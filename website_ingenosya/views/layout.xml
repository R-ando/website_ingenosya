            </xpath>
        </template> 

    <!-- Customize container-->
    <template id="container" inherit_id="website.layout" name="menu">
      <xpath expr="//div[@id='wrapwrap']//div[@class='container']" position="attributes">
        <attribute name="class">container-fluid</attribute>
      </xpath>
      
      <xpath expr="//header" position="inside">
        <script type="text/javascript">
          var onloadCallback = function() {
            grecaptcha.render(document.getElementById('captcha_element'), {
              'sitekey' : '6LepsSkTAAAAAPf3tqpAQZhsaw7HjHicptUkhFkC',
              'theme' : 'light'
            });
          };
        </script>
      </xpath>

      <xpath expr="//meta[@property='og:title']" position="replace">
        <!-- Facebook and linkedin sharing title -->
        <meta property="og:title" content="INGENOSYA, votre ESN (SSII) à Madagascar"/>
      </xpath>
      
      <xpath expr="//t[@t-set='head_website']" position="inside">
        <!-- Facebook description -->
        <meta propert="og:description" content="INGENOSYA est une ESN (SSII), spécialisée dans la prestation et la transformation digitale depuis plus de 20 ans. Assurez la continuité de vos activités !" />
        <!-- Facebook and linkedin sharing image -->
        <meta property='og:image' t-att-content="request.httprequest.url_root+'website_ingenosya/static/src/img/slider/bg_slide3.png'"/>
        
        <!--  Twitter sharing data -->
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:site" content="Ingenosya Madagascar" />
        <meta name="twitter:title" content="INGENOSYA, votre ESN (SSII) à Madagascar" />
        <meta name="twitter:description" content="INGENOSYA est une ESN (SSII), spécialisée dans la prestation et la transformation digitale depuis plus de 20 ans. Assurez la continuité de vos activités !" />
        <meta name="twitter:image" t-att-content="request.httprequest.url_root+'website_ingenosya/static/src/img/slider/bg_slide3.png'" />
      </xpath>
    </template>

